{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "CruiseShip.UpdateAgent": "Information",
      "Microsoft": "Error"
    }
  },
  "ShipConfig": {
    "ShipId": "SHIP-001",
    "ShipName": "Ocean Explorer",
    "CheckIntervalSeconds": 300,
    "HealthCheckIntervalSeconds": 60,
    "MaxRetries": 3,
    "RollbackTimeoutMinutes": 10,
    "Communication": {
      "ShoreEndpoint": "https://fleet-command.cruiseline.com",
      "ApiToken": "{{REPLACE_WITH_SHIP_SPECIFIC_TOKEN}}",
      "CertificatePath": "C:\\CruiseShip\\certs\\ship-client.crt",
      "PrivateKeyPath": "C:\\CruiseShip\\certs\\ship-client.key",
      "CaCertPath": "C:\\CruiseShip\\certs\\shore-ca.crt"
    },
    "MaintenanceWindows": [
      {
        "Days": [ "Sunday", "Wednesday" ],
        "StartTime": "02:00:00",
        "EndTime": "06:00:00",
        "TimeZone": "UTC"
      }
    ],
    "Deployment": {
      "AutoApply": true,
      "RequireManualApproval": false,
      "BackupRetentionDays": 30
    },
    "Monitoring": {
      "Enabled": true,
      "ReportIntervalSeconds": 300,
      "MetricsToCollect": [ "cpu", "memory", "disk", "network", "containers" ]
    }
  }
}
