{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ShipConfig": {
    "ShipId": "SHIP-LOCAL",
    "ShipName": "Local Development",
    "CheckIntervalSeconds": 300,
    "HealthCheckIntervalSeconds": 60,
    "MaxRetries": 3,
    "RollbackTimeoutMinutes": 10,
    "Communication": {
      "ShoreEndpoint": "https://localhost:5001",
      "ApiToken": "development-token",
      "CertificatePath": "",
      "PrivateKeyPath": "",
      "CaCertPath": ""
    },
    "MaintenanceWindows": [
      {
        "Days": [ "Sunday", "Wednesday" ],
        "StartTime": "02:00:00",
        "EndTime": "06:00:00",
        "TimeZone": "UTC"
      }
    ],
    "Deployment": {
      "AutoApply": true,
      "RequireManualApproval": false,
      "BackupRetentionDays": 7
    },
    "Monitoring": {
      "Enabled": true,
      "ReportIntervalSeconds": 300,
      "MetricsToCollect": [ "cpu", "memory", "disk", "network", "containers" ]
    }
  }
}
