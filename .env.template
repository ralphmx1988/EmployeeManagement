# Cruise Ship Environment Configuration Template
# Copy this file to .env and customize for each ship

# Ship Identification
SHIP_ID=Ship001
SHIP_NAME="Cruise Ship Alpha"
SHIP_REGISTRY=registry.cruiseline.com

# Update Configuration
UPDATE_CHECK_INTERVAL=3600
REGISTRY_URL=registry.cruiseline.com
AUTO_UPDATE_ENABLED=true
UPDATE_WINDOW_START=02:00
UPDATE_WINDOW_END=04:00

# Database Configuration
DB_SERVER=sqlserver
DB_NAME=EmployeeManagement
DB_USER=sa
DB_PASSWORD=YourStrong@Passw0rd

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
LOG_LEVEL=Information
MAX_LOG_SIZE_MB=100

# Network Configuration
WEB_PORT=8080
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
DB_PORT=1433
HEALTH_MONITOR_PORT=9090

# Data Synchronization (when internet available)
ENABLE_DATA_SYNC=true
CENTRAL_API_URL=https://central.cruiseline.com/api
SYNC_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30

# Security Configuration
JWT_SECRET=YourSuperSecretJWTKeyForCruiseShip2024!
ENCRYPTION_KEY=YourEncryptionKeyForData2024!

# Resource Limits
MAX_MEMORY_MB=2048
MAX_CPU_CORES=2

# Monitoring Configuration
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
ENABLE_METRICS=true
METRICS_RETENTION_HOURS=24
