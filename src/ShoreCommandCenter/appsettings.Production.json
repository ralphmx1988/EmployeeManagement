{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=prod-sql-server;Database=CruiseFleetManagement;User Id=fleet_user;Password=your-production-password;TrustServerCertificate=true;"
  },
  "Jwt": {
    "Key": "your-production-256-bit-secret-key-here-make-it-very-long-and-secure-different-from-dev",
    "Issuer": "ShoreCommandCenter",
    "Audience": "CruiseFleet"
  },
  "ContainerRegistry": {
    "Endpoint": "cruisefleetregistry.azurecr.io",
    "Username": "${ACR_USERNAME}",
    "Password": "${ACR_PASSWORD}"
  },
  "FleetConfiguration": {
    "MaxConcurrentDeployments": 3,
    "DefaultMaintenanceWindow": "02:00-06:00",
    "HealthCheckIntervalMinutes": 2,
    "OfflineThresholdMinutes": 10
  }
}
