@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <i class="bi bi-building text-primary me-2"></i>
                <span class="text-muted">Employee Management System v1.0</span>
            </div>
            <div class="d-flex align-items-center">
                <span class="text-muted me-3">
                    <i class="bi bi-clock me-1"></i>
                    @DateTime.Now.ToString("MMM dd, yyyy")
                </span>
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-info-circle me-1"></i>
                    About
                </a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet class="blazor-error-boundary">
    <div class="d-flex align-items-center">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <div>
            <strong>An unhandled error has occurred.</strong>
            <p class="mb-0">Please check the console for more details.</p>
        </div>
    </div>
    <div class="mt-2">
        <a href="." class="reload btn btn-sm btn-light me-2">
            <i class="bi bi-arrow-clockwise me-1"></i>
            Reload
        </a>
        <span class="dismiss btn btn-sm btn-outline-light">
            <i class="bi bi-x-lg"></i>
        </span>
    </div>
</div>
